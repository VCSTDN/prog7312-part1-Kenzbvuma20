@model ReportIssueViewModel

<div class="progress">
    <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 20%"></div>
</div>


<h2>Report Issues</h2>

<form asp-action="Create" asp-controller="ReportIssues" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Location"></label>
        <input asp-for="Location" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Category" class="control-label"></label>
        <select asp-for="Category" asp-items="@(new SelectList(new[] { "Sanitation", "Roads", "Utilities", "Other" }))" class="form-control"></select>
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="MediaAttachment"></label>
        <input type="file" asp-for="MediaAttachment" class="form-control" />
    </div>

    
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

