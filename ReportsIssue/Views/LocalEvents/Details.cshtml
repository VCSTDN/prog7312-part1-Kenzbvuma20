@model ReportsIssue.Models.LocalEvent

<h2>@Model.Title</h2>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.Title</h5>
        <p class="card-text">@Model.Description</p>
        <p><strong>Category:</strong> @Model.Category</p>
        <p><strong>Date:</strong> @Model.EventDate.ToString("yyyy-MM-dd")</p>
    </div>
</div>

<a href="/LocalEvents" class="btn btn-secondary mt-4">Back to Events</a>

<!-- Recently Viewed Events -->
@if (ViewBag.EventHistory != null && ((IEnumerable<ReportsIssue.Models.LocalEvent>)ViewBag.EventHistory).Any())
{
    <div class="recently-viewed-events mt-5">
        <h3>Recently Viewed Events</h3>
        <div class="row">
            @foreach (var eventItem in (IEnumerable<ReportsIssue.Models.LocalEvent>)ViewBag.EventHistory)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@eventItem.Title</h5>
                            <p class="card-text">@eventItem.Description</p>
                            <p><strong>Date:</strong> @eventItem.EventDate.ToString("yyyy-MM-dd")</p>
                        </div>
                        <div class="card-footer text-right">
                            <a href="@Url.Action("Details", "LocalEvents", new { id = eventItem.EventId })" class="btn btn-sm btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
