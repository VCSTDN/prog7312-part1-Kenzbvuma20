@model MainMenuViewModel

<div class="container mt-4">
    <!-- Menu Section -->
    <h2 class="mb-3">Menu</h2>
    <ul class="list-group menu-list">
        @foreach (var menuItem in Model.MenuOptions)
        {
            <li class="list-group-item">
                @if (menuItem.Enabled)
                {
                    <a asp-controller="@menuItem.Controller" asp-action="@menuItem.Action" class="menu-item d-flex align-items-center">
                        <i class="fas fa-@(menuItem.Icon) fa-lg mr-2"></i> @menuItem.Text
                    </a>
                }
                else
                {
                    <span class="menu-item disabled d-flex align-items-center">
                        <i class="fas fa-lock fa-lg mr-2"></i> @menuItem.Text (Coming soon...)
                    </span>
                }
            </li>
        }
    </ul>

    <!-- Reports Section -->
    <h2 class="mt-5 mb-3">Reports</h2>
    <ul class="list-unstyled">
        @foreach (var reportIssue in Model.ReportIssues)
        {
            <li class="mb-4">
                <div class="card shadow-sm report-card">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0">@reportIssue.Location</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <strong>Category:</strong> <span>@reportIssue.Category</span>
                            </div>
                            <div class="col-md-4">
                                <strong>Description:</strong> <span>@reportIssue.Description</span>
                            </div>
                            @if (!string.IsNullOrEmpty(reportIssue.MediaAttachmentFilePath))
                            {
                                <div class="col-md-4">
                                    <img src="@Url.Content($"~/uploads/{reportIssue.MediaAttachmentFilePath}")" alt="Media Attachment" class="img-fluid rounded shadow" />
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </li>
        }
    </ul>

    <!-- Subtle Footer -->
    <footer class="mt-4">
        <div class="container text-center">
            <small class="text-muted">&copy; 2024 - ReportsIssue</small>
        </div>
    </footer>
</div>